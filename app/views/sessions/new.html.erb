<h1>Login</h1>

  <%= form_for :user, url: '/login' do |f| %>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control', name: 'email'%>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control', name: 'password'%>
    </div>
    
    <%= f.submit "Submit", class: 'btn, btn-primary'%>

  <% end %> 
